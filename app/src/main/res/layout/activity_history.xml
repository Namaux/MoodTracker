<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/historyCase1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/historyCase1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/Black"
            android:textSize="12sp"
            android:text="Il y a une semaine"
             />

        <ImageButton
            android:id="@+id/historyCase1Btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/banana_yellow" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/historyCase2"
        >

        <TextView
            android:id="@+id/historyCase2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Il y a six jours"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"
            />

        <ImageButton
            android:id="@+id/historyCase2Btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/banana_yellow"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/historyCase3"
        >

        <TextView
            android:id="@+id/historyCase3Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Il y a cinq jours"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"
            />

        <ImageButton
            android:id="@+id/historyCase3Btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/banana_yellow"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
